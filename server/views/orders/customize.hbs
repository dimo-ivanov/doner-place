<main>
    <h1>Customize your order</h1>
    <div class="catalog">
        <div class="column">
            <img src="{{imageUrl}}">
        </div>
        <div class="column">
            <h2>{{category}} doner, {{size}}cm</h2>
            <h3>Toppings</h3>
            <div class="toppings">
                <form id="order-add-form" action="/order/add"   method="POST">
                    <input name="product" type="hidden" value="{{_id}}">
                    {{#each toppings}}
                    <input name="toppings" type="checkbox" value="{{this}}" checked><label for="{{this}}">{{this}}</label><br>
                    {{/each}}
                </form>
            </div>
            <a class="button" href="javascript:document.getElementById('order-add-form').submit()">Checkout</a>
        </div>
    </div>
</main>