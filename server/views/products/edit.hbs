<main>
  <form action="/products/edit/{{product._id}}" method="post">
    <h2>Edit Product</h2>
    <div>
      <label for="category">Category</label>
      <select name="category" id="category">
        <option value="{{product.category}}">{{product.category}}</option>
        <option value="beef">Beef</option>
        <option value="chicken">Chicken</option>
        <option value="lamb">Lamb</option>
      </select>
    </div>
    <div>
      <label for="imageUrl">Image Url</label>
      <input id="imageUrl" name="imageUrl" type="text" value="{{product.imageUrl}}">
    </div>
    <div>
      <label for="size">Size</label>
      <input id="size" name="size" type="number" value="{{product.size}}">
    </div>
    <div>
      <strong>Toppings</strong>
      <br>
      <textarea id="toppings" name="toppings">{{product.toppings}}</textarea>
    </div>
    <div>
      <input type="submit" value="Save" class="button" style="border:0" />
    </div>
  </form>
</main>